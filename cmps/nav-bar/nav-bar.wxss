.nav-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    /* 使用postion:relative就没有问题 */
    font-size: 32rpx;
    font-weight: bold;
}

.icons {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
}

.icons image{
    width: 30rpx;
    height: 30rpx;
}

