/* pages/login/login.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
}
.logo{
width: 144rpx;
height: 144rpx;
margin: 30rpx 0;
}

.btn-login{
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    text-align: center ;
    border-radius: 10rpx;
}

.wechat{
    color: white;
    background-color: #42bd55;
    margin-bottom: 30rpx;
}

.douban{
    background-color: white;
    color: #42bd55;
    border: 2rpx solid #42bd55;
}
.aggrement{
    color: #9d9d9d;
    font-size: 24rpx;
    display: inline-flex;
    position: absolute;
    bottom: 50rpx;
}
.aggrement .open{
    margin-left: 6rpx;
    color: #4bb65c;
    font-size: 24rpx;
}