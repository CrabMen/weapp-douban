/* pages/profile/profile.wxss */
page {
height: 100%;

}
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

}
.login-wrapper{
    height: 400rpx  ;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}
.login-wrapper image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.login-wrapper .login{
    color: #1E4826;
    background-color: #fff;
    border-radius: 50rpx;
    font-size: 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    width: 300rpx;
    text-align: center;
    box-shadow: 2rpx 2rpx 2rpx 0 rgba(0, 0, 0, 0.2 );
}
.items-wrapper{
    margin-top: 30rpx; 
    /* flex-direction: row; */
}
.title-wrapper{
  display: flex;
  padding-left: 30rpx;
  padding-right: 40rpx;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx; 
}

.title-wrapper .title{
    font-weight: bold;
    font-size: 36rpx;
}
.title-wrapper .view{
    color: #838383;
    font-size: 30rpx;
    display: flex;
    /* justify-content: center; */
    align-items: center;
   
} 

.items-wrapper .arrow {
    width: 18rpx;
    height: 18rpx;
    border-color: #7f7f7f;
    /* background-color: #f00; */
    border-right: 4rpx solid #7f7f7f;
    border-bottom: 4rpx solid #7f7f7f;
    transform: rotate(-45deg);
}
.item {
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    padding-right: 20rpx;
    margin-top: 20rpx;
}
/* .item:last-of-type .divider {
    visibility: hidden;
    display: none;
} */
.item .icon {
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
}

.info-wrapper {
 /* width: 100% ; */
 flex: 1;
 padding-right: 20rpx;
}
.info-wrapper .info {
    justify-content: space-between ;
    align-items: center;
    display: flex;
}
.info .left .top {
    margin-bottom: 15rpx;
    font-size: 32rpx;
}
.info .left .bottom {
    display: flex;
    color: #818181;
    align-items: baseline;
}

.info .count {
    font-size: 60rpx;
    font-weight: bold;
    margin-right: 10rpx; 
}
.info .right {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-grow: 1;
    padding-left: 40rpx;
}
.info .right .text{
    color: #c1c1c1;
    margin-right: 10rpx;
    font-size: 26rpx;
    margin-right: 30rpx;
}

.info .right .begin-wrapper{
    display: flex;
    align-items: center;
}
.info .right .begin{
    
   color: #4a4a4a;
   background-color: #f5f5f5;
   border-radius: 10rpx ;
   padding: 6rpx 16rpx;
   font-size: 26rpx;
   margin-right: 10rpx;
}

.item .divider {
    width: 100%;
    height: 2rpx;
    background-color:rgba(0, 0, 0, 0.1);
    margin-top: 15rpx;
}
.version{
    /* position: absolute; */
    margin: 30rpx 0;
    color: #9d9d9d;
    font-size: 26rpx;
    width: 100%;
    text-align: center;
}