/* pages/home/home.wxss */
.header{
    background-color: #42bd55;
    padding: 15rpx;
}
.search-wrapper {
    display: flex;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 6rpx 0;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #9d9d9d;
}
.search-wrapper image{
   height: 32rpx;
   width: 32rpx;
   margin-right: 10rpx;
}
.title-wrapper{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    margin-top: 30rpx;
    margin-bottom: 40rpx;
}
.title-wrapper .title{
    color :#494949;
    font-weight: bold;
    font-size: 32rpx;
   
}

.title-wrapper .more{
    color :#0db019;
    font-size: 28rpx;
    display: flex;
    align-items: center;
}

.title-wrapper  .arrow {
    width: 12rpx;
    height: 12rpx;
    /* background-color: #f00; */
    border-right: 4rpx solid #0db019;
    border-bottom: 4rpx solid #0db019;
    transform: rotate(-45deg);
}

.items {
    /* display: flex;
    overflow-x: auto; */
    white-space: nowrap;
}
.items .item {
    /* margin:  0 15rpx; */
    /* display: inline-block; */
    display: inline-flex;
    flex-direction: column;
    margin-left: 30rpx;
    width: 210rpx;
}

.items .item:last-child{
    margin-right: 30rpx;
}

.item .photo {
    width: 100%;
    height: 300rpx;
    margin-bottom: 15rpx;
    border-radius: 4rpx;
}

.item .title {
    width: 100%;
    font-size: 26rpx;
    font-weight: bold;
    margin-bottom: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item .score .stars {
   display: flex;
   margin-right: 4rpx;
}
.score {
    display: flex;
    align-items: center;
    color :#818181;
    font-size: 24rpx;
}
.stars .star {
    width: 30rpx;
    height: 30rpx;
}
