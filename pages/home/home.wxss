/* pages/home/home.wxss */
.header{
    background-color: #42bd55;
    padding: 15rpx;
}
.search-wrapper {
    display: flex;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 6rpx 0;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #9d9d9d;
}
.search-wrapper image{
   height: 32rpx;
   width: 32rpx;
   margin-right: 10rpx;
}
.row {
    margin-bottom: 30rpx;
    height: 382rpx;
}
.title-wrapper{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    margin-top: 30rpx;
    margin-bottom: 40rpx;
}
.title-wrapper .title{
    color :#494949;
    font-weight: bold;
    font-size: 32rpx;
   
}

.title-wrapper .more{
    color :#0db019;
    font-size: 28rpx;
    display: flex;
    align-items: center;
}

.title-wrapper  .arrow {
    width: 12rpx;
    height: 12rpx;
    /* background-color: #f00; */
    border-right: 4rpx solid #0db019;
    border-bottom: 4rpx solid #0db019;
    transform: rotate(-45deg);
}

.items {
  
    white-space: nowrap;
}


 .item {
   margin-left: 30rpx;
}
.item :last-of-type {
    margin-right: 30rpx;
}

