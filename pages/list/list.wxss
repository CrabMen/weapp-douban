/* pages/list/list.wxss */
 .item {
    
    display: inline-flex;
    flex-direction: column;
    width: 160rpx;
}

 .item:last-child{
    /* margin-right: 30rpx; */
}

.item .photo {
    width: 100%;
    height: 223rpx;
    margin-bottom: 15rpx;
    border-radius: 4rpx;
}

.item .title {
    width: 100%;
    font-size: 26rpx;
    font-weight: bold;
    margin-bottom: 6rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item .score .stars {
   display: flex;
   margin-right: 4rpx;
}
.score {
    display: flex;
    align-items: center;
    color :#818181;
    font-size: 24rpx;
}
.stars .star {
    width: 24rpx;
    height: 24rpx;
}
